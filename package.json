{
  "name": "ornl-weather",
  "version": "1.0.0",
  "description": "ORNL-Weather",
  "author": "Students of TnTech",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng build --base-href ./ && electron .",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "pack": "ng build --base-href ./ && electron-builder --dir",
    "dist": "ng build --base-href ./ && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.2.2",
    "@angular/cdk": "^13.1.3",
    "@angular/common": "^13.2.2",
    "@angular/compiler": "^13.2.2",
    "@angular/core": "^13.2.2",
    "@angular/forms": "^13.2.2",
    "@angular/material": "^13.1.3",
    "@angular/platform-browser": "^13.2.2",
    "@angular/platform-browser-dynamic": "^13.2.2",
    "@angular/router": "^13.2.2",
    "@material/toolbar": "^2.3.0",
    "convert-array-to-csv": "^2.0.0",
    "convert-csv-to-json": "^1.3.3",
    "engine.io": "^6.1.2",
    "log4js": "^6.4.1",
    "minimist": "^1.2.5",
    "nanoid": "^3.2.0",
    "ngx-csv": "^0.3.2",
    "ngx-pagination": "^5.1.1",
    "postcss": "^8.4.6",
    "rxjs": "^7.5.4",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.2.3",
    "@angular/cli": "^13.2.3",
    "@angular/compiler-cli": "^13.2.2",
    "@types/file-saver": "^2.0.5",
    "@types/jasmine": "~3.10.0",
    "@types/jquery": "^3.5.13",
    "@types/node": "^12.20.47",
    "app-builder-bin": "^4.1.2",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "file-saver": "^2.0.5",
    "jasmine-core": "^4.0.0",
    "karma": "^6.3.16",
    "typescript": "^4.5.5"
  },
  "build": {
    "appId": "com.electron.ornl-amo-weather",
    "productName": "ORNL-Weather",
    "directories": {
      "output": "../output/"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/doe_image256.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/doe_image.ico",
      "installerHeaderIcon": "src/assets/doe_image.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "src/assets/doe_image256.png",
      "executableName": "ORNL-Weather",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Science"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/assets/doe_image256.png",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.inherit.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    }
  }
}
